{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",

    "baseUrl": "./src",
    "outDir": "./dist",
    "sourceMap": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "paths": {
      "@types": ["./types"],
      "@utils": ["./utils"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
